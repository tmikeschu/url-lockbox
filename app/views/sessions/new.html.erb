<section class="login">
  <h1>Login</h1>

  <%= form_tag login_path do %>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], required: true %>

    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true %>

    <%= submit_tag "Log In" %>
  <% end %>

  <p>Don't have an account? Sign up <%= link_to 'here', new_user_path %>.</p>
</section>
