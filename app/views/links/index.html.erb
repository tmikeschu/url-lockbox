<% if current_user %>
  <%= link_to "Sign Out", logout_path, method: "DELETE" %>
<% end %>

<section class="link-form">
  <h3>Add a Link</h3>
  <%= form_for @link do |f| %>
    <%= f.label :url %>
    <%= f.url_field :url, required: true %>

    <%= f.label :title %>
    <%= f.text_field :title, required: true %>

    <%= f.submit "Lock It Up" %>
  <% end %>
</section>

<section class="lockbox">
  <h3>Lockbox</h3>
  <% @links.each do |link| %>
    <article id="link<%= link.id%>">
      <h4><%= link.title %></h4>
      <%= link_to link.url, link.url %>
      <p>Read? <%= link.read %></p>
      <%= button_to "Mark as Read", link_path(link), method: 'patch' %>
    </article>
  <% end %>
</section>
